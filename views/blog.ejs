<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="main.css">
</head>

<body>
  <div class="container">
    <h1><%=locals.email%>'s Blog</h1>
    <a id="newPostBtn" href="/new">Add Post</a>
    <ul id="postsList">
      <% posts.forEach(post=> { %>
        <li>
          <h2>
            <%=post.title%>
          </h2>
          <p>
            <%=post.content%>
          </p>
        </li>
        <% }); %>
    </ul>
  </div>

</body>

</html>